{
	"compilerOptions": {
		"jsx": "react",
		"noImplicitAny": false,
		"removeComments": true,
		"declaration": true,
		"emitDeclarationOnly": true,
    "declarationDir": "lib",
    "skipLibCheck": true,
		"outDir": "lib",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"lib": ["dom", "es2015", "es5", "es6"],
    "target": "es6"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.d.ts"]
}
